# Weather Station Data Bridge Configuration

# Required: Windy API key
WINDY_API_KEY=your_windy_api_key_here

# Required: Weather Underground API key
WU_API_KEY=your_wu_api_key_here

# Required: Comma-separated list of Weather Underground station IDs
WU_STATION_IDS=KSTATION1,KSTATION2,KSTATION3

# Required: Comma-separated list of Windy station IDs (must match order of WU_STATION_IDS)
WINDY_STATION_IDS=windy_id_1,windy_id_2,windy_id_3

# Optional: Sync interval in minutes (default: 5)
SYNC_INTERVAL_MINUTES=5

# Optional: Log level (DEBUG, INFO, WARNING, ERROR) (default: INFO)
LOG_LEVEL=INFO

# Optional: Number of retry attempts for failed API calls (default: 3)
RETRY_ATTEMPTS=3

# Optional: Delay between retries in seconds (default: 5)
RETRY_DELAY_SECONDS=5
